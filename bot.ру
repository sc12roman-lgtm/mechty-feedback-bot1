import os
import logging
from aiogram import Bot, Dispatcher, executor, types
from aiogram.contrib.fsm_storage.memory import MemoryStorage
from aiogram.dispatcher import FSMContext
from aiogram.dispatcher.filters.state import State, StatesGroup

logging.basicConfig(level=logging.INFO)

BOT_TOKEN = os.getenv("BOT_TOKEN")

ADMINS = [
    1066954190,
    931929515
]

if not BOT_TOKEN:
    exit("–û–®–ò–ë–ö–ê: –ü–µ—Ä–µ–º–µ–Ω–Ω–∞—è BOT_TOKEN –Ω–µ —É—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω–∞ –≤ –Ω–∞—Å—Ç—Ä–æ–π–∫–∞—Ö Railway!")

bot = Bot(token=BOT_TOKEN)
dp = Dispatcher(bot, storage=MemoryStorage())

class Feedback(StatesGroup):
    rating = State()
    kitchen = State()
    service = State()
    like = State()
    improve = State()


@dp.message_handler(commands="start", state="*")
async def start(message: types.Message, state: FSMContext):
    await state.finish()  # –°–±—Ä–∞—Å—ã–≤–∞–µ–º —Å—Ç–∞—Ä—ã–µ –¥–∞–Ω–Ω—ã–µ –ø—Ä–∏ –ø–µ—Ä–µ–∑–∞–ø—É—Å–∫–µ
    kb = types.ReplyKeyboardMarkup(resize_keyboard=True)
    kb.add("‚≠êÔ∏è1","‚≠êÔ∏è2","‚≠êÔ∏è3","‚≠êÔ∏è4","‚≠êÔ∏è5")
    await message.answer(
        "–î–æ–±—Ä–æ –ø–æ–∂–∞–ª–æ–≤–∞—Ç—å –≤ ¬´–ú–µ—á—Ç—ã¬ª üåø\n\n–ö–∞–∫–æ–µ –≤–ø–µ—á–∞—Ç–ª–µ–Ω–∏–µ –æ—Å—Ç–∞–ª–æ—Å—å –æ—Ç –≤–∏–∑–∏—Ç–∞?",
        reply_markup=kb
    )
    await Feedback.rating.set()

@dp.message_handler(state=Feedback.rating)
async def rating(message: types.Message, state: FSMContext):
    await state.update_data(rating=message.text)
    kb = types.ReplyKeyboardMarkup(resize_keyboard=True)
    kb.add("–ü—Ä–µ–∫—Ä–∞—Å–Ω–æ","–•–æ—Ä–æ—à–æ","–û–∂–∏–¥–∞–ª –±–æ–ª—å—à–µ–≥–æ")
    await message.answer("–ö–∞–∫ –≤–∞–º –∫—É—Ö–Ω—è?", reply_markup=kb)
    await Feedback.kitchen.set()

@dp.message_handler(state=Feedback.kitchen)
async def kitchen(message: types.Message, state: FSMContext):
    await state.update_data(kitchen=message.text)
    kb = types.ReplyKeyboardMarkup(resize_keyboard=True)
    kb.add("–í–Ω–∏–º–∞—Ç–µ–ª—å–Ω—ã–π –∏ —Ç—ë–ø–ª—ã–π","–ù–æ—Ä–º–∞–ª—å–Ω—ã–π","–ï—Å—Ç—å –Ω–∞–¥ —á–µ–º –ø–æ—Ä–∞–±–æ—Ç–∞—Ç—å")
    await message.answer("–ö–∞–∫ –≤—ã –æ—Ü–µ–Ω–∏–≤–∞–µ—Ç–µ —Å–µ—Ä–≤–∏—Å?", reply_markup=kb)
    await Feedback.service.set()

@dp.message_handler(state=Feedback.service)
async def service(message: types.Message, state: FSMContext):
    await state.update_data(service=message.text)
    await message.answer("–ß—Ç–æ –æ—Å–æ–±–µ–Ω–Ω–æ –ø–æ–Ω—Ä–∞–≤–∏–ª–æ—Å—å?", reply_markup=types.ReplyKeyboardRemove())
    await Feedback.like.set()

@dp.message_handler(state=Feedback.like)
async def like(message: types.Message, state: FSMContext):
    await state.update_data(like=message.text)
    await message.answer("–ß—Ç–æ, –Ω–∞ –≤–∞—à –≤–∑–≥–ª—è–¥, –º–æ–∂–Ω–æ —É–ª—É—á—à–∏—Ç—å?")
    await Feedback.improve.set()

@dp.message_handler(state=Feedback.improve)
async def improve(message: types.Message, state: FSMContext):
    data = await state.get_data()
    
    rating_digits = "".join(filter(str.isdigit, data["rating"]))
    rating_val = int(rating_digits) if rating_digits else 0
    kitchen_val = data["kitchen"]
    service_val = data["service"]

    if rating_val <= 3 or kitchen_val == "–û–∂–∏–¥–∞–ª –±–æ–ª—å—à–µ–≥–æ" or service_val == "–ï—Å—Ç—å –Ω–∞–¥ —á–µ–º –ø–æ—Ä–∞–±–æ—Ç–∞—Ç—å":
        text = (
            f"‚ö†Ô∏è –û–±—Ä–∞—Ç–Ω–∞—è —Å–≤—è–∑—å ¬´–ú–µ—á—Ç—ã¬ª\n\n"
            f"–û—Ü–µ–Ω–∫–∞: {data['rating']}\n"
            f"–ö—É—Ö–Ω—è: {kitchen_val}\n"
            f"–°–µ—Ä–≤–∏—Å: {service_val}\n\n"
            f"–ü–æ–Ω—Ä–∞–≤–∏–ª–æ—Å—å:\n{data['like']}\n\n"
            f"–ß—Ç–æ —É–ª—É—á—à–∏—Ç—å:\n{message.text}"
        )
        for admin in ADMINS:
            try:
                await bot.send_message(admin, text)
            except Exception as e:
                logging.error(f"–ù–µ —É–¥–∞–ª–æ—Å—å –æ—Ç–ø—Ä–∞–≤–∏—Ç—å —Å–æ–æ–±—â–µ–Ω–∏–µ –∞–¥–º–∏–Ω—É {admin}: {e}")

    await message.answer(
        "–°–ø–∞—Å–∏–±–æ üôè\n–ú—ã –≤–Ω–∏–º–∞—Ç–µ–ª—å–Ω–æ –æ—Ç–Ω–æ—Å–∏–º—Å—è –∫ –∫–∞–∂–¥–æ–º—É –æ—Ç–∑—ã–≤—É.\n–ë—É–¥–µ–º —Ä–∞–¥—ã –≤–∏–¥–µ—Ç—å –≤–∞—Å —Å–Ω–æ–≤–∞ –≤ ¬´–ú–µ—á—Ç–∞—Ö¬ª."
    )
    await state.finish()

if __name__ == '__main__':
    print("–ë–æ—Ç —É—Å–ø–µ—à–Ω–æ –∑–∞–ø—É—â–µ–Ω –Ω–∞ Railway!")
    executor.start_polling(dp, skip_updates=True)
